// Program to find greatest and smallest number in an aray.


#include<stdio.h>
void main()
{
    int i,j,a[10]={1,5,3,2,8,5,11,45,6,10},s;
    for(i=0;i<10;++i)
    {
        j=i=a[0];
        for(i=1;i<10;++i)
        {
            if(a[i]>j)
            j=a[i];
            if(a[i]<s)
            s=a[i];
        }
        printf("smallest number is %d\n",s);
        printf("largest number is %d\n",j);
    }
}
