#include<stdio.h>
int main()                          
{
    float dis,mt,cm,inch,ft;
    printf("enter the distance(in km) between the two cities:\n");
    scanf("%f",&dis);
    mt=dis*1000;
    cm=mt*100;
    inch=cm/2.54;
    ft=inch/12;
    printf("the distance in meter is:%f,in cm is:%f,in inch is:%f,in feet is:%f"
    ,mt,cm,inch,ft);
    return 0;


