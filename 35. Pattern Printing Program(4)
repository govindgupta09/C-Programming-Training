// Pattern Printing Program

#include<stdio.h>
void main()
{
    int i,j,n;
    printf("enter the number of rows: ");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n;j++)
        {
            if ((i+j)<=n)
                printf(" ");
            else
                printf("*"); //  printf("%d",j); and, also check by  giving space in b/w star.
        }
        printf("\n");
    }
}
