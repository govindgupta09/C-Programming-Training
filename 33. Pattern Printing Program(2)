// Pattern Printing Progranms

#include<stdio.h>
void main()
{
    int i,j,n;
    printf("enter the number of rows: ");
    scanf("%d",&n);
    for(i=0;i<=n;i++)
    {
        for(j=1;j<=i;j++)      // change--> j<=n-i;
        {
            printf(" * ",j);  // printf("%d",j);
        }
        printf("\n");
    }     
}
